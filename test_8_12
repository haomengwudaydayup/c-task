#include<stdio.h>
#include<stdlib.h>

#if 0
int fun(int n)
{
	static int i = 1;
	if (n >= 5)
		return n;
	n += i;
	i++;
	return fun(n);
}

int main()
{
	printf(" %d\n", fun(1));
	system("pause");
	return 0;
}

#elif 0

int func()
{
	int i, j, k = 0;
	for (i = 0, j = -1; j = 0; i++, j++)
	{
		k++;
	}
	return k;
}
int main()
{
	printf("%d\n", func());
	system("pause");
	return 0;
}

#elif 0

int main()
{
	int c[] = { 1,3,5 };
	int *k = c + 1;
	printf("%d\n", *(++k));	//左++的优先级是大于*的
	system("pause");
	return 0;
}

#elif 0

int main()
{
	int a = 2, *p1, **p2;
	p2 = &p1;
	p1 = &a;
	a++;
	printf("%d, %d, %d\n", a, *p1, **p2);
	system("pause");
	return 0;
}

#elif 0

int main()
{
	int k, j, s;
	for (k = 2; k < 6; k++, k++)
	{
		s = 1;
		for (j = k; j < 6; j++)
		{
			s += j;
		}
	}
	printf("%d\n", s);
	system("pause");
	return 0;
}
#elif 1

int main()
{
	int arr[] = { 6,7,8,9,10 };
	int *ptr = arr;

	printf("\n%d , %d\n", *(ptr), *(ptr++));
	
	system("pause");
	return 0;
}

#elif 0

int main()
{
	int arr[] = { 1,2,3,4,5 };
	int *p = arr;
	printf("%d, %d\n", *p+);
	system("pause");
	return 0;
}
#endif // 0


